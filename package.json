{
  "name": "@open-game-collective/auth-kit",
  "version": "0.0.5",
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    "./client": {
      "types": "./src/client.ts",
      "import": "./src/client.ts"
    },
    "./react": {
      "types": "./src/react.tsx",
      "import": "./src/react.tsx"
    },
    "./worker": {
      "types": "./src/worker.ts",
      "import": "./src/worker.ts"
    },
    "./test": {
      "types": "./src/test.ts",
      "import": "./src/test.ts"
    }
  },
  "files": [
    "src"
  ],
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "format": "biome format --write .",
    "lint": "biome check .",
    "lint:fix": "biome check --apply .",
    "ci": "npm run typecheck && npm run lint && npm run test"
  },
  "author": "jonmumm",
  "license": "MIT",
  "peerDependencies": {
    "react": "^17.0.0 || ^18.0.0"
  },
  "dependencies": {
    "jose": "^5.8.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.5.3",
    "@cloudflare/workers-types": "^4.20240925.0",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@types/node": "^20.11.24",
    "@types/react": "^18.2.61",
    "@vitest/coverage-v8": "^1.3.1",
    "happy-dom": "^13.10.1",
    "msw": "^2.2.1",
    "react": "^18.2.0",
    "typescript": "^5.3.3",
    "vitest": "^1.3.1"
  },
  "type": "module"
}
